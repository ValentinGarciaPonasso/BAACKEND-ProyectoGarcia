<div>
    {{#each cart}}
    <h1 data-cart-id={{this.id}} id="cartId">Carrito ID: {{this.id}}</h1>
    {{/each}}
    <div class="bloque">
        {{#each products}}
        <div class="tarjeta">
            {{#with (lookup this '_id')}}
                <p>Titulo: {{title}}</p>
                <p>Precio: {{price}}</p>
                <p>Stock: {{stock}}</p>
                <p>Categor√≠a: {{category}}</p>
            {{/with}}
            <p>Id: {{this.id}}</p>
            <p>Cantidad: {{this.quantity}}</p>
            <a href="/api/products/{{this.id}}">Ver Producto</a>
            <button type="submit" class="deleteFromCart" value="{{this.id}}">Quitar del carrito</button>
        </div>
        {{/each}}
    </div>
    <a href="/products/">Volver</a>
</div>

<script type="text/javascript" src="/js/product.js"></script>